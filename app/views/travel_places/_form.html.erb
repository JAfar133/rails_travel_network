<!-- views/travel_places/_form.html.erb -->
<%= form_with(model: travel_place, local: true, html: { class: 'form' }) do |form| %>
  <% if travel_place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(travel_place.errors.count, "error") %> form filling:</h2>
      <ul>
        <% travel_place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "form-label" %></br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :location, class: "form-label" %></br>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description, class: "form-label" %></br>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit travel_place.persisted? ? 'Update' : 'Create', class: "btn btn-primary" %>
  </div>
<% end %>
