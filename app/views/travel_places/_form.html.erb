<!-- views/travel_places/_form.html.erb -->
<%= form_with(model: travel_place, local: true, html: { class: 'form' }) do |form| %>
  <% if travel_place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(travel_place.errors.count, "ошибка") %> заполнения формы:</h2>
      <ul>
        <% travel_place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %></br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :location %></br>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :description %></br>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit travel_place.persisted? ? 'Обновить' : 'Создать' %>
  </div>
<% end %>
