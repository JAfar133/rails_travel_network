<!-- app/views/users/favorites.html.erb -->
<%= link_to 'Back', travel_places_path, class: "mb-5" %>
<h1>Your Favorite Places</h1>
<div>
  <% if @favorite_places.present? %>
    <ul class="list-group list-group-numbered">
      <% @favorite_places.each do |travel_place| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= link_to travel_place.name, travel_place, class: "list-group-item-action link-dark stretched-link" %></div>
            <%= "by #{travel_place.creator.last_name} #{travel_place.creator.first_name} - #{travel_place.created_at.strftime('%Y-%m-%d %H:%M')}" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No favorite places yet.</p>
  <% end %>
</div>
